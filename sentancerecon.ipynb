import pandas as pd
from sentence_transformers import SentenceTransformer, util
import torch

df = pd.read_csv('data.csv')
datalist=df['Produktnamn'].tolist()
print(datalist)

def initialize_system():
    model = SentenceTransformer('paraphrase-MiniLM-L6-v2')  # Lightweight model
    product_embeddings = model.encode(datalist, convert_to_tensor=True)
    return model, datalist, product_embeddings


def find_closest_products(input_sentence, model, products, product_embeddings, top_k=5):
    input_embedding = model.encode(input_sentence, convert_to_tensor=True)
    cos_scores = util.cos_sim(input_embedding, product_embeddings)[0]
    top_results = torch.topk(cos_scores, k=top_k)
    results = []
    for score, idx in zip(top_results[0], top_results[1]):
        results.append({
            'product': products[idx],
            'score': round(score.item(), 4)
        })
    return results


def main():
    model, products, product_embeddings = initialize_system()
    print(f"System loaded with {len(products)} products")
    print("Type 'quit' to exit\n")
    while True:
        user_input = input("Enter your product description: ")
        if user_input.lower() == 'quit':
            break
        matches = find_closest_products(user_input, model, products, product_embeddings)
        
        print("\nTop matches:")
        for i, match in enumerate(matches, 1):
            print(f"{i}. {match['product']} (score: {match['score']})")
        print()

if __name__ == "__main__":
    main()
